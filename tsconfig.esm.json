{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["es5", "es6", "dom"],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": false,
        "esModuleInterop": true,
        "skipLibCheck": true,    
        "module": "commonjs",
        "outDir": "esm/dist",
    },
    "files": ["./src/foo.js"],
    "include": ["src/**/foo.js", "src/**/bar.js"],
    "exclude": ["node_modules", "**/*.test.*", "**/*.spec.*", "**/*Spec", "**/*clsTest.*"]    
}